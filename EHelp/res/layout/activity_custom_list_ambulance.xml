<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" 
    android:background="@drawable/layout_border">
    
     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        >

                        <TextView
                            android:id="@+id/tvAsal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="LOKASI TEMPUH"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text=":"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/viewLokasi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Sitoluama"
                            android:textColor="@color/black" />
                    </LinearLayout>
         <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp" >

                        <TextView
                            android:id="@+id/tvWaktuTempuh"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="WAKTU TIBA"
                            android:textColor="@color/blue" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text=":"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/viewWaktuTempuh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="13.35"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    
             
    
   

    

    <LinearLayout
        android:id="@+id/imgCloseNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_close"
        android:onClick="onClick"
        android:orientation="horizontal" 
        >
                        
         <ImageView
             android:id="@+id/imgAmbulance"
             android:layout_width="99dp"
             android:layout_height="99dp"
             android:src="@drawable/ambulance_icon"
             android:background="@drawable/layout_border"
             android:layout_gravity="center|left" />
        
    <Button
        android:id="@+id/btnTersedia"
        android:layout_width="82dp"
        android:layout_height="35dp"
        android:layout_gravity="center|right"
        android:background="@drawable/button"
        android:text="Tersedia"
        android:textColor="@color/white" 
        android:layout_marginLeft="60dp"
        android:onClick="onClick"/>
    

    </LinearLayout>

</LinearLayout>